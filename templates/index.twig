{% extends "base.twig" %}

{% block title %}Peludors{% endblock %}
{% block head %}
    {{ parent() }}
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
    <link rel="stylesheet" href="../assets/css/main.css"/>
    <noscript>
        <link rel="stylesheet" href="../assets/css/noscript.css"/>
    </noscript>
{% endblock %}
{% block content %}

    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
    </div>

    <!-- obituary Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto pb-4 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="section-title bg-white text-center text-primary px-3">Obituario</p>
                <h1 class="mb-5">Homenajes a mascotas</h1>
                <div class="row g-4 justify-content-center">
                    {% for pet in homeSections['latestTributes'] %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title text-primary">{{ pet.name }}</h5>
                                    {% if pet.type %}
                                        <p class="card-text mb-1"><strong>Tipo:</strong> {{ pet.type }}</p>
                                    {% endif %}
                                    {% if pet.breed %}
                                        <p class="card-text mb-1"><strong>Raza:</strong> {{ pet.breed }}</p>
                                    {% endif %}
                                    {% if pet.userID %}
                                        <p class="card-text text-muted">ID de usuario: {{ pet.userID }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row gy-5 gx-4">
                {% for pet in homeSections['threeLatestPetTributes'] %}
                    <div class="col-lg-4 col-md-6 pt-5 wow fadeInUp" data-wow-delay="0.1s">
                        <a href="" class="pet-card-link">
                            <div class="service-item">
                                <div class="service-img">
                                    <img class="img-fluid" src="{{ pet.photoURL }}" alt="user pet photo">
                                </div>
                                <div class="service-text">
                                    <div class="service-icon">
                                        <img class="img-fluid rounded-circle" src="{{ pet.photoURL }}" alt="">
                                    </div>
                                    <div class="row align-items-center justify-content-between w-100">
                                        <div class="col-auto icon-cell">
                                            {% if pet.type is same as('dog') %}
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                     class="icon-54 paw-svg" fill="currentColor" role="img">
                                                    <path d="M256 224c-79.41 0-192 122.76-192 200.25 0 34.9 26.81 55.75 71.74 55.75 48.84 0 81.09-25.08 120.26-25.08 39.51 0 71.85 25.08 120.26 25.08 44.93 0 71.74-20.85 71.74-55.75C448 346.76 335.41 224 256 224zm-147.28-12.61c-10.4-34.65-42.44-57.09-71.56-50.13-29.12 6.96-44.29 40.69-33.89 75.34 10.4 34.65 42.44 57.09 71.56 50.13 29.12-6.96 44.29-40.69 33.89-75.34zm84.72-20.78c30.94-8.14 46.42-49.94 34.58-93.36s-46.52-72.01-77.46-63.87-46.42 49.94-34.58 93.36c11.84 43.42 46.53 72.02 77.46 63.87zm281.39-29.34c-29.12-6.96-61.15 15.48-71.56 50.13-10.4 34.65 4.77 68.38 33.89 75.34 29.12 6.96 61.15-15.48 71.56-50.13 10.4-34.65-4.77-68.38-33.89-75.34zm-156.27 29.34c30.94 8.14 65.62-20.45 77.46-63.87 11.84-43.42-3.64-85.21-34.58-93.36s-65.62 20.45-77.46 63.87c-11.84 43.42 3.64 85.22 34.58 93.36z"/>
                                                </svg>
                                            {% elseif pet.type is same as('cat') %}
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                     class="icon-54 paw-svg" fill="currentColor" role="img">
                                                    <ellipse cx="50" cy="70" rx="30" ry="20" fill="black"/>
                                                    <ellipse cx="25" cy="40" rx="10" ry="15" fill="black"/>
                                                    <ellipse cx="75" cy="40" rx="10" ry="15" fill="black"/>
                                                    <ellipse cx="40" cy="30" rx="10" ry="15" fill="black"/>
                                                    <ellipse cx="60" cy="30" rx="10" ry="15" fill="black"/>
                                                </svg>
                                            {% elseif pet.type is same as('other') %}
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                     class="icon-54 paw-svg" fill="currentColor" role="img">
                                                    <path d="M20,50 C20,70 80,70 80,50 C80,30 20,30 20,50 Z"
                                                          fill="#D2691E"/>
                                                    <circle cx="35" cy="35" r="10" fill="#D2691E"/>
                                                    <circle cx="65" cy="35" r="10" fill="#D2691E"/>
                                                    <circle cx="40" cy="65" r="10" fill="#D2691E"/>
                                                    <circle cx="60" cy="65" r="10" fill="#D2691E"/>
                                                </svg>
                                            {% endif %}
                                        </div>
                                        <div class="col-auto date-block">
                                            <div>{{ pet.formattedBirthDate }}</div>
                                            <div class="date-sep">-</div>
                                            <div>{{ pet.formattedDeathDate }}</div>
                                        </div>
                                        <div class="col-auto icon-cell">
                                            <svg class="candle-svg" viewBox="0 0 800 800" fill="currentColor"
                                                 xmlns="http://www.w3.org/2000/svg" role="img"
                                                 aria-label="Vela encendida de homenaje">
                                                <defs>
                                                    <!-- Degradado suave para la llama -->
                                                    <linearGradient id="flameGrad" x1="0" y1="0" x2="0" y2="1">
                                                        <stop offset="0%" stop-color="#FFF3A6"/>
                                                        <stop offset="60%" stop-color="#FFE07A"/>
                                                        <stop offset="100%" stop-color="#FFC267"/>
                                                    </linearGradient>
                                                    <!-- Brillo suave (glow) -->
                                                    <filter id="softGlow" x="-50%" y="-50%" width="200%" height="200%">
                                                        <feGaussianBlur stdDeviation="18" result="blur"/>
                                                        <feMerge>
                                                            <feMergeNode in="blur"/>
                                                            <feMergeNode in="SourceGraphic"/>
                                                        </feMerge>
                                                    </filter>
                                                </defs>

                                                <!-- Halo circular (secundario Peludors) -->
                                                <g opacity="0.9">
                                                    <circle cx="400" cy="250" r="205" fill="#ECDD5F" opacity="0.28"/>
                                                    <circle cx="400" cy="250" r="150" fill="#ECDD5F" opacity="0.32"/>
                                                    <circle cx="400" cy="250" r="95" fill="#ECDD5F" opacity="0.40"/>
                                                </g>

                                                <!-- Cuerpo de la vela -->
                                                <rect x="330" y="320" width="140" height="215" rx="28"
                                                      fill="#FFFFFF" stroke="#414A3C" stroke-width="10"/>
                                                <!-- Platillo simple -->
                                                <rect x="290" y="515" width="220" height="44" rx="22"
                                                      fill="#FFFFFF" stroke="#414A3C" stroke-width="10"/>
                                                <!-- Sombrilla del platillo (toque minimal) -->
                                                <rect x="300" y="535" width="200" height="14" rx="7" fill="#414A3C"
                                                      opacity="0.12"/>

                                                <!-- Mecha -->
                                                <path d="M400 312 L400 262" stroke="#414A3C" stroke-width="10"
                                                      stroke-linecap="round"/>

                                                <!-- Llama con glow suave -->
                                                <g filter="url(#softGlow)">
                                                    <!-- aureola de la llama -->
                                                    <ellipse cx="400" cy="235" rx="44" ry="30" fill="#ECDD5F"
                                                             opacity="0.45"/>
                                                    <!-- llama principal -->
                                                    <path d="M400 205
                                                         C388 224 372 242 372 258
                                                         C372 276 385 290 400 290
                                                         C415 290 428 276 428 258
                                                         C428 242 412 224 400 205 Z"
                                                          fill="url(#flameGrad)"/>
                                                </g>
                                            </svg>
                                            {#<span class="candle-count">123</span>#}
                                        </div>
                                    </div>

                                    <div class="row mt-3 align-items-center justify-content-between w-100">
                                        <p class="col-4">{{ pet.name }}</p>
                                        <p class="col-4">{{ pet.age }}</p>
                                        <p class="col-4">{{ pet.breed }}</p>
                                    </div>
                                    <div class="row m-1 align-items-center justify-content-between w-100">
                                        <p class="col">{{ pet.farewell }}</p>
                                    </div>


                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>

    <!-- highligt Start -->
    <div class="container-fluid banner my-5 py-5" data-parallax="scroll" data-image-src="img/banner.jpg">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.3s">
